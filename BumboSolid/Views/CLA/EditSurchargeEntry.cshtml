@model BumboSolid.Data.Models.CLASurchargeEntry

@{
	ViewData["Title"] = "CLA Toeslag Regel Bewerken";
}

<header class="d-flex align-items-center gap-3 justify-content-center gap-3">
	<div class="w-100 d-flex justify-content-end">
		<a class="btn new-btn" asp-controller="CLA" asp-action="Index">Terug</a>
	</div>
	<div class="mx-3 text-center text-nowrap">
		<h1>CAO Toeslag Regel Bewerken</h1>
	</div>
	<div class="w-100"></div>
</header>

<div class="row justify-content-center">
	<div class="col-md-10">
		<form asp-controller="CAO" asp-action="ToeslagBewerken">
			<div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
			<input type="hidden" asp-for="Id" />
			<div class="row pb-2">
				<div class="form-group col-md-12">
					<label asp-for="Surcharge" class="control-label fw-bold">Toeslag in %</label>
					<input asp-for="Surcharge" class="form-control p-1 border-solid-black" />
					<span asp-validation-for="Surcharge" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group pt-2 col-12">
				<input type="submit" value="Opslaan" class="btn new-btn w-100" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
