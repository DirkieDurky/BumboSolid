@model BumboSolid.Data.Models.CLASurchargeEntry

@{
	string[] daysOfTheWeek = { "Maandag", "Dinsdag", "Woensdag", "Donderdag", "Vrijdag", "Zaterdag", "Zondag" };
}

<header class="d-flex flex-column align-items-center">
	<div class="d-flex w-100 header-items">
		<div class="d-flex justify-content-center align-items-center w-35">
			<a class="btn bumbo-btn bumbo-btn-back" asp-controller="CLA" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Terug</a>
		</div>
		<div class="text-center d-flex flex-column align-items-center justify-content-center w-30 text-nowrap">
			<h1>CAO Toeslag Regel Bewerken</h1>
		</div>
		<div class="d-flex justify-content-center align-items-center w-35">
			<a asp-action="DeleteSurchargeEntry" asp-route-id="@Model.Id" class="btn bumbo-btn bumbo-btn-danger">
				<i class="fa-solid fa-trash-can"></i> Verwijder
			</a>
		</div>
	</div>
</header>

<br />

<div class="row justify-content-center">
	<div class="col-md-10">
		<form asp-controller="CAO" asp-action="ToeslagBewerken">
			<div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
			<input type="hidden" asp-for="Id" />
			<div class="row pb-2">
				<div class="form-group col-md-6">
					<label asp-for="Surcharge" class="control-label fw-bold">Toeslag in %</label>
					<input asp-for="Surcharge" class="form-control p-1" />
					<span asp-validation-for="Surcharge" class="text-danger"></span>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="Weekday" class="control-label fw-bold">Dag</label>
					<select asp-for="Weekday" class="form-control p-1">
						@for (int i = 0; i < daysOfTheWeek.Length; i++)
						{
							<option value="@i">@daysOfTheWeek[i]</option>
						}
					</select>
					<span asp-validation-for="Weekday" class="text-danger"></span>
				</div>
			</div>
			<div class="row pb-2">
				<div class="form-group col-md-6">
					<label asp-for="StartTime" class="control-label fw-bold">Start Tijd</label>
					<input asp-for="StartTime" class=" form-control p-1" type="time" />
					<span asp-validation-for="StartTime" class="text-danger"></span>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="EndTime" class="control-label fw-bold">Eind Tijd</label>
					<input asp-for="EndTime" class=" form-control p-1" type="time" />
					<span asp-validation-for="EndTime" class="text-danger"></span>
				</div>
			</div>
			<br />
			<div class="d-flex justify-content-center align-items-center">
				<button type="submit" class="btn bumbo-btn w-50"><i class="fas fa-save"></i> Opslaan</button>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
