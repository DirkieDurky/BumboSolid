@model IEnumerable<BumboSolid.Models.CLACardViewModel>

@{
    ViewData["Title"] = "CAO regels";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">
        @TempData["Message"]
    </div>
}

<header class="d-flex align-items-center gap-3 justify-content-center gap-3">
    <div class="w-100 text-align text-end">
        <a class="btn new-btn" asp-controller="CAO" asp-action="Toevoegen">CAO Regel Toevoegen</a>
    </div>
    <div class="mx-3 text-center text-nowrap">
        <h1>CAO Regels</h1>
    </div>
    <div class="w-100"></div>
</header>

@if (!Model.Any())
{
    <div class="text-center pt-3">
        <h1>Geen CAO Regels</h1>
        <p>Het lijkt erop dat er geen CAO regels in het systeem staan. Gelukkig kan je deze toevoegen met de "CAO Regel Toevoegen" knop.</p>
    </div>
}
else
{
    @foreach (var card in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                <div class="row">

                    @if (card.AgeStart.HasValue && card.AgeEnd.HasValue)
                    {
                        <h2 class="col-10">Regels voor @card.AgeStart tot @card.AgeEnd</h2>
                    }
                    else if (!card.AgeStart.HasValue && !card.AgeEnd.HasValue)
                    {
                        <h2 class="col-10">Algemene regels</h2>
                    }
                    else if (!card.AgeStart.HasValue && card.AgeEnd.HasValue)
                    {
                        <h2 class="col-10">Regels tot @card.AgeEnd</h2>
                    }
                    else if (card.AgeStart.HasValue && !card.AgeEnd.HasValue)
                    {
                        <h2 class="col-10">Regels vanaf @card.AgeStart jaar</h2>
                    }
                    <a href="/CAO/Bewerken?AgeStart=@card.AgeStart&AgeEnd=@card.AgeEnd" class="btn col-1 fw-bold">Bewerk</a>
                    <a href="/CAO/Verwijderen?AgeStart=@card.AgeStart&AgeEnd=@card.AgeEnd" class="btn col-1 fw-bold">Verwijder</a>
                </div>

            </div>
            <div class="card-body">
                <ul>
                    @foreach (var rule in card.Rules)
                    {
                        <li class="rules-list">@rule</li>
                    }
                </ul>
            </div>
        </div>
    }
}

