@model BumboSolid.Data.Models.CLAEntry

<h1 class="text-center">Verwijderen</h1>

<h3 class="text-center">Weet je zeker dat je de volgende regel wilt verwijderen?</h3>
<div class="text-center">
    @if (Model.AgeStart.HasValue && Model.AgeEnd.HasValue)
    {
        <h2>Regels voor @Model.AgeStart tot @Model.AgeEnd</h2>
    }
    else if (!Model.AgeStart.HasValue && !Model.AgeEnd.HasValue)
    {
        <h2>Algemene regels</h2>
    }
    else if (!Model.AgeStart.HasValue && Model.AgeEnd.HasValue)
    {
        <h2>Regels tot @Model.AgeEnd</h2>
    }
    else if (Model.AgeStart.HasValue && !Model.AgeEnd.HasValue)
    {
        <h2>Regels vanaf @Model.AgeStart jaar</h2>
    }

    <!-- TODO show data-->
    <br />

    <div class="d-flex row justify-content-center">
        <div class="d-flex flex-row justify-content-around w-50">
            <a asp-action="Edit" asp-route-ageStart="@Model.AgeStart" asp-route-ageEnd="@Model.AgeEnd" class="btn bumbo-btn">Terug</a>
            <form asp-action="VerwijderdSucces">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Verwijderen" class="btn bumbo-btn bumbo-btn-danger" />
            </form>
        </div>
    </div>
</div>
