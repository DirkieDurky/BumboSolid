@model BumboSolid.Models.WeatherManageViewModel

@{
    string[] labels = { "Heel goed", "Goed", "Een beetje goed", "Neutraal", "Een beetje slecht", "Slecht", "Heel slecht" };
}
<header class="d-flex flex-column align-items-center">
    <div class="d-flex w-100 header-items">
        <div class="d-flex justify-content-between align-items-center w-35">
            <a class="btn bumbo-btn bumbo-btn-back" asp-controller="Prognoses" asp-action="Index">
                <i class="fa-solid fa-arrow-left"></i> Terug
            </a>
        </div>
        <div class="text-center d-flex flex-column align-items-center justify-content-center w-30">
            <h1>Weer-waardes bewerken</h1>
        </div>
    </div>
</header>


<br />
<div class="row">
    <div>
        <form asp-controller="Weer" asp-action="Bewerken">
            <div class="form-group">
                <div class="row">
                    @foreach (var label in labels)
                    {
                        string imageSrc = "/images/weather/" + Array.IndexOf(labels, label) + ".svg";

                        <div class="col-md-3">
                            <div class="weather-box">
                                <div class="d-flex flex-column align-items-center">
                                    <img class="weather-image" src="@imageSrc" alt="@label" />
                                    <label for="Impacts" class="control-label mb-2">@label</label>
                                    <input name="Impacts" class="form-control" value="@Model.Impacts[Array.IndexOf(labels, label)]" type="number" />
                                    <span asp-validation-for="Impacts" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                <button type="submit" class="btn bumbo-btn w-50"><i class="fas fa-save"></i> Opslaan</button>
            </div>
        </form>
    </div>
</div>
