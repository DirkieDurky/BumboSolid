@using BumboSolid.Data.Models
@model BumboSolid.Data.Models.ClockedHours

<header class="d-flex flex-column align-items-center">
    <div class="d-flex w-100 header-items">
        <div class="d-flex justify-content-center align-items-center w-35">
            <a asp-action="Index" class="btn bumbo-btn bumbo-btn-back">
                <i class="fa-solid fa-arrow-left"></i> Terug
            </a>
        </div>
        <div class="text-center d-flex flex-column align-items-center justify-content-center w-30 text-nowrap">
            <h1>Geklokte uren bewerken</h1>
        </div>
        <div class="d-flex justify-content-center align-items-center w-35">
            <a class="btn bumbo-btn bumbo-btn-danger" asp-controller="ClockedHoursManager" asp-action="Delete" asp-route-id="@Model.Id">
                <i class="fa-solid fa-trash-can"></i> verwijder
            </a>
        </div>
    </div>
</header>

<br />

@if (ViewBag.Error != null)
{
    <div class="d-flex justify-content-center align-items-center alert alert-danger">
        <span>@ViewBag.Error</span>
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="WeekId" />
            <input type="hidden" asp-for="Weekday" />
            <input type="hidden" asp-for="ExternalEmployeeName" />
            <input type="hidden" asp-for="IsBreak" />
            <div class="form-group col-md-12 pb-2">
                <label class="control-label fw-bold">Afdeling</label>
                <select asp-for="Department" class="form-control p-1" asp-items="ViewBag.Departments"></select>
            </div>
            <div class="form-group col-md-12 pb-2">
                <label asp-for="StartTime" class="control-label">Starttijd</label>
                <input asp-for="StartTime" type="time" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12 pb-2">
                <label asp-for="EndTime" class="control-label">Eindtijd</label>
                <input asp-for="EndTime" type="time" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <br />
            <div class="d-flex justify-content-center align-items-center">
                <button type="submit" class="btn bumbo-btn w-50"><i class="fas fa-save"></i> Opslaan</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}