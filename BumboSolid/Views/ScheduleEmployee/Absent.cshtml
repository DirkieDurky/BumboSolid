@model BumboSolid.Models.AbsenceViewModel

<header class="d-flex align-items-center gap-3 justify-content-center gap-3">
    <div class="mx-3 text-center text-nowrap">
        <h1>Afmelden</h1>
        <p>@Model.Weekday - @Model.Department</p>
    </div>
</header>

<br />

<div class="d-flex justify-content-around align-items-center">
    <form asp-action="Absent" class="w-75">
        <input type="hidden" asp-for="ShiftId" />
        <div class="row pb-3">
            <div class="form-group col-md-6">
                <label class="control-label">Starttijd</label>
                <input asp-for="StartTime" class="form-control" value="@Model.StartTime" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Eindtijd</label>
                <input asp-for="EndTime" class="form-control" value="@Model.EndTime" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group pb-3">
            <label class="control-label">Reden</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <br />
        <div class="d-flex justify-content-between align-items-center">
            <a class="btn bumbo-btn bumbo-btn-back" asp-controller="ScheduleEmployee" asp-action="EmployeeSchedule"><i class="fa-solid fa-arrow-left"></i> Annuleren</a>
            <button type="submit" class="btn bumbo-btn bumbo-btn-danger"><i class="fa-solid fa-ban"></i> Afmelden</button>
        </div>
    </form>
</div>
