@model IEnumerable<BumboSolid.Models.FillRequestViewModel>

@{
    ViewData["Title"] = "Inkomende Invalsverzoeken";
}

<header class="d-flex align-items-center gap-3 justify-content-center gap-3">
    <div class="mx-3 text-center text-nowrap">
        <h1>Invalsverzoeken</h1>
    </div>
</header>

<a class="bumbo-btn selected-btn me-4 px-3">Inkomend</a>
<a class="bumbo-btn px-3 mb-3" asp-controller="ScheduleEmployee" asp-action="OutgoingFillRequests">Uitgaand</a>

@if (Model.Count() != 0)
{
    <div class="row">
        <div class="col-md-divseven fw-bold p-0 pe-3">Datum</div>
        <div class="col-md-divseven fw-bold p-0 pe-3">Dag</div>
        <div class="col-md-divseven fw-bold p-0 pe-3">Afdeling</div>
        <div class="col-md-divseven fw-bold p-0 pe-3">Starttijd</div>
        <div class="col-md-divseven fw-bold p-0 pe-3">Eindtijd</div>
        <div class="col-md-divseven fw-bold p-0 pe-3">Naam</div>

        <hr class="m-0 my-2" />

        @foreach (var fillRequestViewModel in Model)
        {
            string weekday = fillRequestViewModel.Day switch
            {
                "Monday" => "Maandag",
                "Tuesday" => "Dinsdag",
                "Wednesday" => "Woensdag",
                "Thursday" => "Donderdag",
                "Friday" => "Vrijdag",
                "Saturday" => "Zaterdag",
                "Sunday" => "Zondag",
                _ => "Onbekende Dag"
            };

            <div class="col-md-divseven p-0 pe-3 left-center-text left-center-text">@fillRequestViewModel.Date</div>
            <div class="col-md-divseven p-0 pe-3 left-center-text left-center-text">@weekday</div>
            <div class="col-md-divseven p-0 pe-3 left-center-text left-center-text">@fillRequestViewModel.Department</div>
            <div class="col-md-divseven p-0 pe-3 left-center-text left-center-text">@fillRequestViewModel.StartTime</div>
            <div class="col-md-divseven p-0 pe-3 left-center-text left-center-text">@fillRequestViewModel.EndTime</div>
            <div class="col-md-divseven p-0 pe-3 left-center-text left-center-text">@fillRequestViewModel.Name</div>
            <div class="col-md-divsevenremainder p-0 pe-3 d-flex justify-content-center">
                <a class="bumbo-btn px-3 me-" asp-controller="ScheduleEmployee" asp-action="AcceptFillRequest" asp-route-id="@fillRequestViewModel.Id">Accepteren</a>
            </div>

            <hr class="m-0 my-2" />
        }
    </div>
}
else
{
    <div class="text-center pt-3">
        <h1>Geen Invalsverzoeken</h1>
        <p>Er zijn op dit moment geen invalsverzoeken.</p>
    </div>
}