@model BumboSolid.Models.HolidayViewModel

<header class="d-flex flex-column align-items-center">
    <div class="d-flex w-100 header-items">
        <div class="d-flex justify-content-center align-items-center w-35">
            <a asp-controller="Holidays" asp-action="Index" class="btn bumbo-btn bumbo-btn-back"><i class="fa-solid fa-arrow-left"></i> Terug</a>
        </div>
        <div class="text-center d-flex flex-column align-items-center justify-content-center w-30">
            <h1>Feestdag Toevoegen</h1>
        </div>
@{
    ViewData["Title"] = "Feestdag aanmaken";
}

<h1>Nieuwe Feestdag Aanmaken</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Feestdagen" asp-action="Aanmaken">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Naam</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstDay" class="control-label">Eerste Dag</label>
                <input asp-for="FirstDay" id="firstday" class="form-control" value=null />
                <span asp-validation-for="FirstDay" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LastDay" class="control-label">Laatste Dag</label>
                <input asp-for="LastDay" id="lastday" class="form-control" value=null />
                <span asp-validation-for="LastDay" class="text-danger"></span>
            </div>

            <script>
                var year = new Date().getFullYear();
                document.getElementById('firstday').setAttribute("min", year + "-01-01");
                document.getElementById('firstday').setAttribute("max", year + "-12-31");
                document.getElementById('lastday').setAttribute("min", year + "-01-01");
                document.getElementById('lastday').setAttribute("max", year + "-12-31");
            </script>

            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn early-btn btn-primary" />
                <a type="button" class="btn early-btn btn-secondary" asp-action="">Terug</a>
            </div>
        </form>
    </div>
</header>

<br />

<div class="d-flex justify-content-center align-items-center">
    <form asp-controller="Holidays" asp-action="Create" method="post" class="w-25">
        <div class="form-group">
            <label for="holidayName">Feestdag Naam</label>
            <input type="text" class="form-control" id="holidayName" name="Name" placeholder="Voer feestdag naam in" required />
        </div>

        <div class="form-group">
            <label for="startDate">Startdatum</label>
            <input type="date" class="form-control" id="startDate" name="FirstDay" required />
        </div>

        <div class="form-group">
            <label for="endDate">Einddatum</label>
            <input type="date" class="form-control" id="endDate" name="LastDay" required />
        </div>

        <div class="d-flex justify-content-center align-items-center">
            <button type="submit" class="btn bumbo-btn w-50"><i class="fa-solid fa-floppy-disk"></i> Opslaan</button>
        </div>
    </form>
</div>
