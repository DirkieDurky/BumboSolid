@model BumboSolid.Models.HolidayViewModel

<header class="d-flex flex-column align-items-center">
    <div class="d-flex w-100 header-items">
        <div class="d-flex justify-content-center align-items-center w-35">
            <a asp-controller="Holidays" asp-action="Index" class="btn bumbo-btn bumbo-btn-back"><i class="fa-solid fa-arrow-left"></i> Terug</a>
        </div>
        <div class="text-center d-flex flex-column align-items-center justify-content-center w-30">
            <h1>Feestdag Toevoegen</h1>
        </div>
    </div>
</header>

<br />

<div class="d-flex justify-content-center align-items-center">
    <form asp-controller="Feestdagen" asp-action="Aanmaken" class="w-50">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Naam</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FirstDay" class="control-label">Eerste Dag</label>
            <input asp-for="FirstDay" id="firstday" class="form-control" value=null />
            <span asp-validation-for="FirstDay" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="LastDay" class="control-label">Laatste Dag</label>
            <input asp-for="LastDay" id="lastday" class="form-control" value=null />
            <span asp-validation-for="LastDay" class="text-danger"></span>
        </div>

        <script>
            var year = new Date().getFullYear();
            document.getElementById('firstday').setAttribute("min", year + "-01-01");
            document.getElementById('firstday').setAttribute("max", year + "-12-31");
            document.getElementById('lastday').setAttribute("min", year + "-01-01");
            document.getElementById('lastday').setAttribute("max", year + "-12-31");
        </script>

        <br />

        <div class="d-flex justify-content-center align-items-center">
            <button type="submit" class="btn bumbo-btn w-50"><i class="fa-solid fa-plus"></i> Aanmaken</button>
        </div>
    </form>
</div>