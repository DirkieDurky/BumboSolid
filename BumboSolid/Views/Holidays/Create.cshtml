@model BumboSolid.Models.HolidayViewModel

<header class="d-flex flex-column align-items-center">
    <div class="d-flex w-100 header-items">
        <div class="d-flex justify-content-center align-items-center w-35">
            <a asp-controller="Holidays" asp-action="Index" class="btn bumbo-btn bumbo-btn-back"><i class="fa-solid fa-arrow-left"></i> Terug</a>
        </div>
        <div class="text-center d-flex flex-column align-items-center justify-content-center w-30">
            <h1>Feestdag Toevoegen</h1>
        </div>
    </div>
</header>

<br />

<div class="d-flex justify-content-center align-items-center">
    <form asp-controller="Holidays" asp-action="Create" method="post" class="w-25">
        <div class="form-group">
            <label for="holidayName">Feestdag Naam</label>
            <input type="text" class="form-control" id="holidayName" name="Name" placeholder="Voer feestdag naam in" required />
        </div>

        <div class="form-group">
            <label for="startDate">Startdatum</label>
            <input type="date" class="form-control" id="startDate" name="FirstDay" required />
        </div>

        <div class="form-group">
            <label for="endDate">Einddatum</label>
            <input type="date" class="form-control" id="endDate" name="LastDay" required />
        </div>

        <div class="d-flex justify-content-center align-items-center">
            <button type="submit" class="btn bumbo-btn w-50"><i class="fa-solid fa-floppy-disk"></i> Opslaan</button>
        </div>
    </form>
</div>
