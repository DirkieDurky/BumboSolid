@{
    ViewData["Title"] = "Feestdag verwijderen";
}

@model BumboSolid.Data.Models.Holiday

<div class="card-body">
    <p class="lead">Weet u zeker dat u dit feest wilt verwijderen?</p>

    <div class="alert alert-warning" role="alert">
        <p><strong>Feest:</strong> @Model.Name</p>
    </div>

    <form asp-controller="Holidays" asp-action="Delete" asp-route-name="@Model.Name" method="post" class="d-inline">
        <input type="hidden" asp-for="Name" />
        <button type="submit" class="btn early-btn btn-danger w-100">Verwijderen</button>
    </form>

    <a asp-controller="Holidays" asp-action="Edit" asp-route-name=@Model.Name class="btn early-btn btn-secondary w-100">Annuleren</a>
</div>
