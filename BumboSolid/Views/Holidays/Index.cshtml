@model IEnumerable<BumboSolid.Models.HolidayViewModel>

<header class="d-flex flex-column align-items-center">
    <div class="d-flex w-100 header-items">
        <div class="d-flex justify-content-center align-items-center w-35">
            <a asp-controller="Prognoses" asp-action="Index" class="btn bumbo-btn bumbo-btn-back"><i class="fa-solid fa-arrow-left"></i> Terug</a>
        </div>
        <div class="text-center d-flex flex-column align-items-center justify-content-center w-30">
            <h1>Feestdagen</h1>
        </div>
        <div class="d-flex justify-content-center align-items-center w-35">
            <a asp-controller="Holidays" asp-action="Create" class="btn bumbo-btn"><i class="fa-solid fa-plus"></i> Feestdag Toevoegen</a>
        </div>
    </div>
</header>

<br />

<div>
    <table class="table">
        <thead>
            <tr>
                <th class="table-corner-l">Feestdagen</th>
                <th>Startdatum</th>
                <th>Einddatum</th>
                <th class="table-corner-r">Invloed</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var holiday in Model)
            {
                <tr>
                    <td>@holiday.Name</td>

                    <td>@holiday.FirstDay.Day - @holiday.FirstDay.Month</td>

                    <td>@holiday.LastDay.Day - @holiday.LastDay.Month</td>

                    <td>
                        <a class="btn btn-link" asp-controller="Holidays" asp-action="Edit" asp-route-id="@holiday.Name">
                            <i class="fa-solid fa-chart-simple"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

