@model BumboSolid.Data.Models.User

@{
    ViewData["Title"] = "Medewerker Verwijderen";
}

<div class="container py-4">
    <h2 class="text-danger">Weet je zeker dat je deze medewerker wilt verwijderen?</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Voornaam</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-sm-4">Achternaam</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-sm-4">Woonplaats</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PlaceOfResidence)</dd>

                <dt class="col-sm-4">Straatnaam</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.StreetName)</dd>

                <dt class="col-sm-4">Huisnummer</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.StreetNumber)</dd>

                <dt class="col-sm-4">Geboortedatum</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.BirthDate)</dd>

                <dt class="col-sm-4">In dienst sinds</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EmployedSince)</dd>

                <dt class="col-sm-4">Afdelingen</dt>
                <dd class="col-sm-8">
                    @if (Model.Departments != null && Model.Departments.Any())
                    {
                        @string.Join(", ", Model.Departments.Select(d => d.Name))
                    }
                    else
                    {
                        <span class="text-muted">Geen afdelingen gekoppeld</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-controller="Employees" asp-action="Index" class="btn btn-secondary">Annuleren</a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Verwijderen</button>
        </form>
    </div>
</div>
