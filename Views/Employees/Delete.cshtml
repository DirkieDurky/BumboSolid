@model BumboSolid.Data.Models.User

@{
    ViewData["Title"] = "Verwijderen";
}

<h3>Weet je zeker dat je deze medewerker wilt verwijderen?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Voornaam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Achternaam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Woonplaats
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlaceOfResidence)
        </dd>
        <dt class="col-sm-2">
            Straatnaam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetName)
        </dd>
        <dt class="col-sm-2">
            Huisnummer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetNumber)
        </dd>
        <dt class="col-sm-2">
            Geboortedatum
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            In dienst sinds
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployedSince)
        </dd>
        <dt class="col-sm-2">Afdelingen</dt>
        <dd class="col-sm-10">
            @if (Model.Departments != null && Model.Departments.Any())
            {
                @string.Join(", ", Model.Departments.Select(d => d.Name))
            }
            else
            {
                <span>Geen afdelingen gekoppeld</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Verwijderen</button>
        <a asp-controller="Employees" asp-action="Index" class="btn early-btn btn-secondary">Annuleren</a>
    </form>
</div>
