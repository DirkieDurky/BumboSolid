@model BumboSolid.Data.Models.Shift

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex flex-row gap-3">
    <div>
        <a asp-action="Index" class="new-btn">Terug</a>
    </div>
    <h1>Verwijderen</h1>
</div>

<h3>Weet je zeker dat je deze shift wil verwijderen?</h3>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" />
    </form>
</div>
