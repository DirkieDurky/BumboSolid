@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script>
		function updateEmployeeName(selectElement) {
			var selectedEmployeeName = selectElement.options[selectElement.selectedIndex].text;
			if (selectedEmployeeName === "Extern filiaal") {
				document.getElementById('hasBreakIn').innerText = "-:--";
			} else {
				document.getElementById('hasBreakIn').innerText = "-:--";
			}

			if (selectedEmployeeName === "Extern filiaal") {
				document.getElementById('canWorkFor').innerText = "-:--";
			} else {
				document.getElementById('canWorkFor').innerText = "-:--";
			}
		}
	</script>
}
