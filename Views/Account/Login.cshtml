@model BumboSolid.Models.LoginViewModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <!-- Image Section -->
        <div class="col-md-5 text-center d-none d-md-block">
            <img src="~/images/bumbologo.png" alt="Login Illustration" class="login-image" />
        </div>

        <!-- Login Form Section -->
        <div class="col-md-4">
            <h2 class="text-center">Log in met je Bumbo account!</h2>
            <span class="text-danger">@ViewBag.Error</span>
            <form action="Login" method="post">
                <hr />
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="input-group">
                        <input asp-for="Password" class="form-control" id="Password" />
                        <button type="button" id="togglePassword" class="btn btn-outline-secondary">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn early-btn new-btn w-100 mt-3 bumbo-yellow">Login</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("togglePassword").addEventListener("click", function () {
            var passwordField = document.getElementById("Password");
            var icon = this.querySelector("i");
            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordField.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        });
    </script>
}
