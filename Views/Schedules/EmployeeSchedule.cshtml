@model BumboSolid.Models.EmployeeScheduleDetailsViewModel

@{
    string[] daysOfTheWeek = { "Maandag", "Dinsdag", "Woensdag", "Donderdag", "Vrijdag", "Zaterdag", "Zondag" };

    var schedule = Model.Weeks.FirstOrDefault(w => w.Id == Model.WeekId);
    if (schedule == null)
    {
        <p>Schedule not found for the selected week.</p>
        return;
    }

    var shifts = schedule.Shifts;
    DateTime startDate = GetFirstDateOfWeek(schedule.Year, schedule.WeekNumber);
    DateTime endDate = startDate.AddDays(6);
}

@functions {
    public static DateTime GetFirstDateOfWeek(int year, int weekOfYear)
    {
        var jan1 = new DateTime(year, 1, 1);
        var daysOffset = (int)DayOfWeek.Monday - (int)jan1.DayOfWeek;
        var firstMonday = jan1.AddDays(daysOffset > 0 ? daysOffset - 7 : daysOffset);
        return firstMonday.AddDays((weekOfYear - 1) * 7);
    }
}

<header class="d-flex align-items-center justify-content-between">
    <div class="w-100 d-flex justify-content-center">
        <a class="btn btn-primary" asp-controller="Schedules" asp-action="Index">Back</a>
    </div>
    <div class="w-100 d-flex justify-content-center">
        @if (Model.PreviousWeekId != null)
        {
            <a class="btn btn-primary" asp-controller="Schedules" asp-action="EmployeeSchedule" asp-route-id="@Model.PreviousWeekId" asp-route-employeeId="@Model.EmployeeId">
                Previous Week
            </a>
        }
    </div>
    <div class="text-nowrap">
        <h1 class="schedule-title">Schedule for @Model.EmployeeName</h1>
    </div>
    <div class="w-100 d-flex justify-content-center">
        @if (Model.NextWeekId != null)
        {
            <a class="btn btn-primary" asp-controller="Schedules" asp-action="EmployeeSchedule" asp-route-id="@Model.NextWeekId" asp-route-employeeId="@Model.EmployeeId">
                Next Week
            </a>
        }
    </div>
    <div class="w-100 d-flex justify-content-center">
        @if (!Model.IsCurrentWeek)
        {
            <a class="btn btn-primary" asp-controller="Schedules" asp-action="EmployeeSchedule" asp-route-id="@Model.CurrentWeekNumber" asp-route-employeeId="@Model.EmployeeId">
                Huidige Week
            </a>
        }
    </div>
</header>

<body>
    <div class="schedule-agenda">
        <div class="days-header">
            @foreach (var dayIndex in Enumerable.Range(0, 7))
            {
                var date = startDate.AddDays(dayIndex);
                <div class="day-header">
                    <h2>@daysOfTheWeek[dayIndex]</h2>
                    <p>@date.ToString("dd-MM")</p>
                </div>
            }
        </div>

        <div class="shifts-row">
            @foreach (var dayIndex in Enumerable.Range(0, 7))
            {
                var shiftsForDay = shifts.Where(s => s.Weekday == dayIndex && s.EmployeeId == Model.EmployeeId).ToList();
                <div class="shift-column">
                    @if (shiftsForDay.Any())
                    {
                        <ul class="shift-list">
                            @foreach (var shift in shiftsForDay)
                            {
                                <li class="shift-item">
                                    <div class="shift-details">
                                        <span class="shift-time">
                                            <i class="fa-regular fa-clock"></i> @shift.StartTime.ToString("HH:mm") - @shift.EndTime.ToString("HH:mm")
                                        </span>
                                        <span class="shift-department">@shift.Department</span>
                                        <div class="shift-actions">
                                            <a asp-controller="Shifts" asp-action="Edit" asp-route-id="@shift.Id" class="shift-link">
                                                <i class="fa-solid fa-pencil"></i>
                                            </a>
                                            <a asp-controller="Shifts" asp-action="Delete" asp-route-id="@shift.Id" class="shift-link">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="no-shifts">Geen shifts voor deze dag.</p>
                    }
                </div>
            }
        </div>
    </div>
</body>
