@model BumboSolid.Data.Models.Norm

<div class="card-body">
    <p class="lead">Weet u zeker dat u dit feestdag wilt verwijderen?</p>

    <div class="alert alert-warning" role="alert">
        <p><strong>Activiteit:</strong> @Model.Activity</p>
        <p><strong>Functie:</strong> @Model.Function</p>
        <p><strong>Duur:</strong> @Model.Duration seconden</p>
    </div>

    <form asp-action="Verwijderen" method="post" class="d-inline">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Ja, Verwijderen
        </button>
    </form>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="fas fa-times"></i> Annuleren
    </a>
</div>