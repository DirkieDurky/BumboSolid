@model IEnumerable<BumboSolid.Models.CLACardViewModel>

@{
    ViewData["Title"] = "CAO regels";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">
        @TempData["Message"]
    </div>
}
<div class="row align-items-center">
    <h1>CAO regels</h1>
    <a class="btn" asp-controller="CAO" asp-action="Toevoegen">Toevoegen</a>
</div>
@if (!Model.Any())
{
    <h4>Het lijkt erop dat er geen CAO regels in het systeem staan. Voeg deze A.U.B. toe</h4>
}
else
{
    @foreach (var card in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                @if (card.AgeStart.HasValue && card.AgeEnd.HasValue)
                {
                    <h2>Regels voor @card.AgeStart tot @card.AgeEnd</h2>
                }
                else if (!card.AgeStart.HasValue && !card.AgeEnd.HasValue)
                {
                    <h2>Algemene regels</h2>
                }
                else if (!card.AgeStart.HasValue && card.AgeEnd.HasValue)
                {
                    <h2>Regels tot @card.AgeEnd</h2>
                }
                else if (card.AgeStart.HasValue && !card.AgeEnd.HasValue)
                {
                    <h2>Regels vanaf @card.AgeStart jaar</h2>
                }
            </div>
            <div class="card-body">
                <ul>
                    @foreach (var rule in card.Rules)
                    {
                        <li class="rules-list">@rule</li>
                    }
                </ul>
            </div>
        </div>
    }
}

