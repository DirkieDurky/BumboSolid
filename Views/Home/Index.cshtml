		<button class="btn btn-primary">Prognose Aanmaken</button>

		<div class="background-dark" id="prognosis-scrollbar">

		</div>

		<button class="btn btn-primary">Normeringen Beheren</button>

		<div></div>

		<!--Overview Holiday button-->
		<button class="p-2 btn btn-primary" data-toggle="modal" data-target="#holidayModal">Feestdagen Beheren</button>

		<!--Overview Holiday pop-up modal-->
		<div class="modal fade" id="holidayModal" tabindex="-1" role="dialog" aria-labelledby="holidayModalLabel" aria-hidden="true">
			<div class="modal-dialog" id="modal-holiday-custom" role="document">
				<div class="modal-content background-light">
					<div class="modal-body">
						<h6 class="holiday-name-title">Feest | Dagen | Invloed</h6>
						<div id="holidays-scrollbar">
							<div class="d-flex flex-row">
								<input class="p-2 form-control background-dark holiday-name" placeholder="Feest naam">
								<input class="p-2 form-control background-dark holiday-date" placeholder="Begin dag">
								<input class="p-2 form-control background-dark holiday-date" placeholder="Eind dag">
								<button class="p-2 background-dark holiday-date fa-solid fa-chart-simple" data-toggle="modal" data-target="#holidayManageModal"></button>
							</div>
							<div class="d-flex flex-row">
								<button class="background-dark holiday-name" id="add-holiday-button">+</button>
							</div>
						</div>
					</div>

					<div class="d-flex flex-row">
						<button type="button" class="btn btn-primary save-button">Opslaan & Bijwerken</button>
					</div>
				</div>
			</div>
		</div>

		<!--Manage Holiday pop-up modal-->
		<div class="modal fade" id="holidayManageModal" tabindex="-1" role="dialog" aria-labelledby="holidayManageModalLabel" aria-hidden="true">
			<div class="modal-dialog" id="modal-holiday-manage-custom" role="document">
				<div class="modal-content background-light">
					<div class="modal-body auto-margin">
						<h6>Feest naam</h6>
					</div>

					<div class="background-dark">
						<div class="d-flex flex-row auto-margin">
							<h6 id="graph-impact-title">Invloed</h6>

							<canvas class="background-white" id="holiday-chart"></canvas>

							<!--Dit is om de graph te laten werken. Het staat nu hier maar als iemand de graph werkend wil maken zal dit waarschijnlijk ergens anders heen moeten-->
							<!--!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
							<script>
								const xValues = [20, 21, 22, 23, 24, 25, 26, 27];
								const yValues = [10, 40, 50, 80, 70, 40, -20, -30];

								new Chart("holiday-chart", {
									type: "line",
									data: {
										labels: xValues,
										datasets: [{
											fill: false,
											lineTension: 0,
											backgroundColor: "rgba(0,0,255,1.1)",
											borderColor: "rgba(0,0,0,1.1)",
											data: yValues
										}]
									},
									options: {
										legend: { display: false },
										scales: {
											yAxes: [{ ticks: { min: -40, max: 80 } }],
										}
									}
								});
							</script>
							<!--!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
						</div>

						<h6 id="graph-days-title">Dagen</h6>

						<div class="d-flex flex-row">
							<input class="p-2 form-control background-light holiday-date" placeholder="Begin dag">
							<input class="p-2 form-control background-light holiday-date" placeholder="Eind dag">
							<button class="p-2 background-light holiday-date fa-solid fa-trash-can"></button>
						</div>
					</div>

					<div class="d-flex flex-row">
						<button type="button" class="btn btn-danger save-button">Annuleren & Ongedaan Maken</button>
						<button type="button" class="btn btn-primary save-button">Opslaan & Bijwerken</button>
					</div>
				</div>
			</div>
		</div>
	</div>

