@model IEnumerable<BumboSolid.Data.Models.Norm>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="modal-body">
	<div class="d-flex flex-row">
		<div class="col-sm-3">
			<h6>Activiteit</h6>
		</div>
		<div class="col-sm-2">
			<h6>Functie</h6>
		</div>
		<div class="col-sm-3">
			<h6>Duur</h6>
		</div>
		<div class="col-sm-4">
			<h6>Gemiddelde Uitvoeringen Per Dag</h6>
		</div>
	</div>

	<div id="norms-scrollbar">
		<form>
			@foreach (var norm in Model)
			{
				<div class="form-group row align-items-center norm-row">
					<div class="col-sm-3">
						<input type="text" class="form-control" value="@norm.Activity" />
					</div>

					<div class="col-sm-2">
						<select class="form-control">
							<option value="Vers" selected="@(norm.Function == "Vers" ? "selected" : null)">Vers</option>
							<option value="Kassa" selected="@(norm.Function == "Kassa" ? "selected" : null)">Kassa</option>
							<option value="Vakkenvullen" selected="@(norm.Function == "Vakkenvullen" ? "selected" : null)">Vakkenvullen</option>
						</select>
					</div>

					<div class="col-sm-1">
						<input type="number" class="form-control" value="@norm.Duration" />
					</div>

					<div class="col-sm-2">
						<select class="form-control">
							<option value="seconds">Seconds</option>
							<option value="minutes">Minutes</option>
							<option value="hours">Hours</option>
						</select>
					</div>

					<div class="col-sm-3 d-flex align-items-center gap-2">
						<input type="number" class="form-control" value="@norm.AvgDailyPerformances" />
						<label for="per-bezoeker" class="col-form-label mx-2">per bezoeker</label>
						<input type="checkbox" id="per-bezoeker" name="per-bezoeker" @(norm.PerVisitor ? "checked" : "") />
					</div>
					<div class="col-sm-1">
						<button type="button" class="btn btn-delete fa-solid fa-trash-can"></button>
					</div>
				</div>
			}
		</form>
	</div>
	<div class="d-flex flex-row norm-row">
		<div class="col-sm-3">
			<form asp-action="Aanmaken" method="get">
				<button type="submit" class="btn btn-primary">+</button>
			</form>
		</div>
	</div>
</div>

<div class="d-flex flex-row">
	<button type="button" class="btn btn-danger save-button">Annuleren & Ongedaan Maken</button>
	<button type="button" class="btn btn-primary save-button">Opslaan & Bijwerken</button>
</div>