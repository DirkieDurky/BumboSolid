@model IEnumerable<BumboSolid.Data.Models.Norm>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="modal-body">
	<div class="d-flex flex-row">
		<div class="col-sm-2">
			<h6>Activiteit</h6>
		</div>
		<div class="col-sm-2">
			<h6>Functie</h6>
		</div>
		<div class="col-sm-3">
			<h6>Duur</h6>
		</div>
		<div class="col-sm-4">
			<h6>Gemiddelde Uitvoeringen Per Dag</h6>
		</div>
	</div>

	<div id="norms-scrollbar">
		<form>
			@foreach (var norm in Model)
			{
				<div class="form-group row align-items-center norm-row">
					<div class="col-sm-2">
						<input type="text" class="form-control" value="@norm.Activity" readonly />
					</div>

					<div class="col-sm-2">
						<input type="text" class="form-control" value="@norm.Function" readonly />
					</div>

					<div class="col-sm-1">
						<input type="number" class="form-control" value="@norm.Duration" readonly />
					</div>

					<div class="col-sm-2">
						<input type="text" class="form-control"
							   value="@(norm.Duration % 3600 == 0 ? "Hours" : (norm.Duration % 60 == 0 ? "Minutes" : "Seconds"))" readonly />
					</div>

					<div class="col-sm-2 d-flex align-items-center gap-2">
						<input type="number" class="form-control" value="@norm.AvgDailyPerformances" readonly />
						<label for="per-bezoeker" class="col-form-label mx-2">per bezoeker</label>
						<input type="checkbox" id="per-bezoeker" name="per-bezoeker" @(norm.PerVisitor ? "checked" : "") disabled />
					</div>
					<div class="col-sm-1 d-flex gap-2">
						@Html.ActionLink("Bewerken", "Bewerken", new { id = norm.Id })
						@Html.ActionLink("Verwijderen", "Verwijderen", new { id = norm.Id })
					</div>
				</div>
			}
		</form>
	</div>
</div>

<div class="d-flex flex-row">
	<a asp-controller="Normeringen" asp-action="Aanmaken" class="btn btn-primary">
		<i class="fas fa-plus fa-2x"></i>
	</a>
	<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Terug</a>
</div>