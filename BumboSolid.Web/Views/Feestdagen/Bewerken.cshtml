@model BumboSolid.Web.Models.HolidayViewModel

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script src="https://kit.fontawesome.com/981e782106.js" crossorigin="anonymous"></script>

<div class="modal-body auto-margin">
	<h6>@Model.Holiday.Name</h6>
</div>

<div class="d-flex flex-row">
	<div class="background-dark auto-margin">
		<div class="d-flex flex-row">
			<h6 id="graph-impact-title">Invloed</h6>

			<canvas class="background-white" id="holiday-chart"></canvas>

			<!--Dit is om de graph te laten werken. Het staat nu hier maar als iemand de graph werkend wil maken zal dit waarschijnlijk ergens anders heen moeten-->
			<!--!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
			<script>
				const xValues = ["@Model.Holiday.HolidayDays.ToList()[0].Date", 21, 22, 23, 24, 25, 26, 27];
				const yValues = [10, 40, 50, 80, 70, 40, -20, -30];

				new Chart("holiday-chart", {
					type: "line",
					data: {
						labels: xValues,
						datasets: [{
							fill: false,
							lineTension: 0,
							backgroundColor: "rgba(0,0,255,1.1)",
							borderColor: "rgba(0,0,0,1.1)",
							data: yValues
						}]
					},
					options: {
						legend: { display: false },
						scales: {
							yAxes: [{ ticks: { min: -40, max: 80 } }],
						}
					}
				});
			</script>
			<!--!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
		</div>

		<h6 id="graph-days-title">Dagen</h6>

		<div class="d-flex flex-row">
			<input class="p-2 form-control background-light holiday-date" placeholder="Begin" value="@Model.FirstDay.Day-@Model.FirstDay.Month">
			<input class="p-2 form-control background-light holiday-date" placeholder="Eind" value="@Model.LastDay.Day-@Model.LastDay.Month">
			<button class="p-2 background-light holiday-date fa-solid fa-trash-can"></button>
		</div>
	</div>

	<div>
		<form>
			@foreach (var holidayDay in Model.Holiday.HolidayDays.ToList())
			{
				<div class="d-flex flex-row">
					<input class="p-2 form-control holiday-date" value="@holidayDay.Date.Day-@holidayDay.Date.Month">
					<input class="p-2 form-control holiday-date" value="@holidayDay.Impact">
				</div>
			}
		</form>
	</div>
</div>
<div class="d-flex flex-row">
	<button type="button" class="btn btn-danger">Annuleren & Ongedaan Maken</button>
	<button type="button" class="btn btn-primary">Opslaan & Bijwerken</button>
</div>